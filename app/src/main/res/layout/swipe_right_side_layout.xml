<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/itemTaskSettingBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="#D7C483">
        <LinearLayout
            android:id="@+id/itemTaskFixBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/itemTaskPin"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/push_pin"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemTaskRepeatBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/itemTaskRepeat"
                android:layout_width="25dp"

                android:layout_height="25dp"
                android:background="@drawable/repeat"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/itemTaskDeleteBtn"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:background="@drawable/garbage"
                android:layout_marginLeft="7dp"
                android:layout_marginRight="7dp"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>