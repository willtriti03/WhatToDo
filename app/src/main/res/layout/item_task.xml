<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    android:id="@+id/itemTaskItemBox"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="50dp"
    android:orientation="horizontal"
    android:background="#FFF9E5"
    android:weightSum="10">

    <LinearLayout
        android:id="@+id/itemTaskTextBox"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:gravity="center|left"
        android:orientation="horizontal"
        >
        <LinearLayout
            android:id="@+id/itemTaskTag"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.5"
            android:background="#FFA9B0"
            android:orientation="vertical">
        </LinearLayout>
        <TextView
            android:id="@+id/itemTaskDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2.5"
            android:gravity="center|left"
            android:text="03.21 MON"
            android:textSize="12sp"
            android:textColor="#333333"
            android:paddingLeft="7dp"
            android:paddingRight="7dp"
            android:descendantFocusability="blocksDescendants"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">
            <ImageView
                android:id="@+id/itemTaskRepeat"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/repeat" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.03"
            android:background="#666666">
        </LinearLayout>
        <TextView
            android:id="@+id/itemTaskText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="6.57"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:maxLines="2"
            android:text="운동하기 으싸으싸"
            android:textSize="12sp"
            android:textColor="#333333"
            android:descendantFocusability="blocksDescendants"
            />
    </LinearLayout>

    <com.example.jungjune.whattodo.Custom.CustomColorBarLinearLayout
        android:id="@+id/itemTaskColorBox"
        android:layout_width="350dp"
        android:layout_height="match_parent"
        android:layout_gravity="left">

    </com.example.jungjune.whattodo.Custom.CustomColorBarLinearLayout>
    <com.example.jungjune.whattodo.Custom.CustomMenuBarLinearLayout
        android:id="@+id/itemTaskSettingBox"
        android:layout_width="180dp"
        android:layout_height="match_parent"
        android:layout_gravity="right">

    </com.example.jungjune.whattodo.Custom.CustomMenuBarLinearLayout>
</FrameLayout>